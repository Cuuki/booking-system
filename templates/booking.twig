{% extends "base.twig" %}

{% block head %}
    {% block title %}
        <title>Gästebuch</title>
    {% endblock %}
{% endblock %}

{% block header %}
<div id="wrapper">
    <div class="row">
        <a href="javascript:void(0)">
            <img src="{{base_url}}/img/logo.png" id="logo" class="col-sm-2 col-xs-4">
        </a>
    </div>
    <div id="header" class="row">    
        <div class="col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1">
            <h1 class="text-center">
                <strong>Willkommen bei HOLIDAYROOMS!</strong>
            </h1>
            <h3 class="text-center">Ihr kompetenter Partner für Ferienhaus-Anmietungen</h3>
            <h4 class="text-center">Hier können Sie Ferienhäuser anhand der eingegebenen Regionen oder Orte finden.</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <section id="home-well" class="well">
                <fieldset id="home-form">        
                    <form  action="" method="post" class="form-horizontal">
                        <div class="col-sm-2 col-sm-offset-1">
                            <div class="form-group home-form">
                                <label for="region" class="control-label home-label">Region</label>
                                <div class="form-control-wrapper">
                                    <input type="text" id="region" name="region" class="form-control text-center" value="{%if value is defined%}{{value.region}}{%endif%}" required placeholder="Welches Land?">
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <div class="form-group home-form">
                                <label for="ort" class="control-label home-label">Ort</label>
                                <div class="form-control-wrapper">
                                    <input type="text" id="ort" name="ort" class="form-control text-center" value="{%if value is defined%}{{value.ort}}{%endif%}" required placeholder="Welche Stadt?">
                                </div>
                            </div>
                        </div>                        
                        <div class="col-sm-2">
                            <div class="form-group home-form">
                                <div class="form-control-wrapper">
                                    <label for="beginn" class="control-label home-label">Check-In</label>
                                    <input type="date" id="beginn" name="beginn" class="form-control text-center" value="{%if value is defined%}{{value.beginn}}{%endif%}" required placeholder="Check-In">
                                </div>
                            </div>                
                        </div>        
                        <div class="col-sm-2">
                            <div class="form-group home-form">
                                <div class="form-control-wrapper">                
                                    <label for="ende" class="control-label home-label">Check-Out</label>
                                    <input type="date" id="ende" name="ende" class="form-control text-center" value="{%if value is defined%}{{value.ende}}{%endif%}" required placeholder="Check-Out">
                                </div>
                            </div>                
                        </div>
                        <div class="col-sm-1">
                            <div class="form-group home-form">
                                <div class="form-control-wrapper">                
                                    <label for="gaeste" class="control-label home-label">Gäste</label>
                                    <input id="gaeste" type="number" name="gaeste" class="form-control text-center" value="{%if value is defined%}{{value.gaeste}}{%endif%}" required placeholder="Anzahl">
                                </div>
                            </div>                
                        </div>                             
                        <div class="col-sm-1">            
                            <div class="form-group home-form">
                                <button  id="home-button" class="btn btn-primary" type="submit">Suche</button>
                            </div>
                        </div>
                    </form>
                </fieldset>
            </section>
        </div>
    </div>
</div>
<div class="row">    
    <div class="col-lg-4 col-lg-offset-4">
        {% if message is defined %}
        <section class="well">
            <p class="alert alert-dismissable alert-danger text-center">
                <strong>{{message}}</strong>
            </p>
        </section>
        {% endif %}
        {% if output is defined and output != false %}
        <section class="well">        
            <p>
                <strong>{{ output.bezeichnung }}</strong>
            </p>
            <p>Anzahl Schlafzimmer: {{ output.schlafzimmer }}</p>
            <p>Anzahl Betten: {{ output.betten }}</p>
            <p>Preis: {{output.preis}}€</p>
            <p>PLZ: {{ output.objekt_plz }}</p>
            <p>Adresse: {{ output.objekt_adresse }}</p>
            <p>Verfügbar von {{output.verfuegbar_anfang}} bis {{output.verfuegbar_ende}}</p>
        </section>
        {% endif %}
    </div>
</div>
{% endblock %}